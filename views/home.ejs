      <div class="boxes">
        <div class="tip-box" data-aos="fade-up">
          <div class="blog-img">
            <img
              src="https://cdn.shopify.com/s/files/1/0410/9608/5665/t/3/assets/pf-8edfce7a--cover-image-2_800x450.jpg?v=1616219671&resized"
